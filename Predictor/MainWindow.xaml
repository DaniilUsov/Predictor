<Window x:Class="Predictor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Predictor"
        xmlns:dvc="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="LoadScriptButton" Content="Загрузить" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="LoadScriptButton_Click"/>
        <TextBox x:Name="LenghtTextBox" HorizontalAlignment="Left" Height="30" Margin="143,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="170" TextChanged="LenghtTextBox_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30"><Run Text="Население"/><LineBreak/><Run/></TextBlock>
        <Label Content="Кол-во мигрантов" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox x:Name="WeightTextBox" HorizontalAlignment="Left" Height="30" Margin="143,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="70" TextChanged="WeightTextBox_TextChanged"/>
        <TextBlock x:Name="SexTextBlock" HorizontalAlignment="Left" Margin="143,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="100"/>
        <Label Content="Кол-во преступлений" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBlock x:Name="EvaluateTextBlock" Margin="90,10,9.6,0" TextWrapping="Wrap" Text="Точность" VerticalAlignment="Top" Height="19"/>
        <StackPanel Margin="0,134,-0.4,0">
            <WindowsFormsHost>
                <dvc:Chart x:Name="chart" />
            </WindowsFormsHost>
        </StackPanel>
    </Grid>
</Window>
